@model LibrarySystem.Models.Customer

@{
    ViewBag.Title = "Index";
}

<h2>Login as Admin or User here!</h2>

@using (Html.BeginForm("Authorize","Login","FormMethod.Post")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Login Form</h4>
        <hr />
        @Html.ValidationSummary(true)              @*displaying the field errors*@

        <div class="form-group">
            @Html.LabelFor(model => model.customerName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.customerName)
                @Html.ValidationMessageFor(model => model.customerName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.password)
                @Html.ValidationMessageFor(model => model.password)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <label class="label-success">@ViewBag.DuplicateMessage</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <label class="label-success">@ViewBag.AdminMessage</label>
            </div>
        </div>

    </div>
}

<div>
    <a href="@Url.Action("Index","Register")">Register</a>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>